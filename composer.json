{
    "name": "tanayweb/greetings-generator",
    "description": "This is a random greetings generator using PHP",
    "keywords": [
        "tanayweb",
        "greetings-generator"
    ],
    "homepage": "https://github.com/tanayweb/greetings-generator",
    "license": "MIT",
    "authors": [
        {
            "name": "tanayweb",
            "email": "freelancertanay22@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Tanayweb\\GreetingsGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tanayweb\\GreetingsGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
